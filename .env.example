# Server Configuration
PORT=3000
NODE_ENV=production
SERVICE_NAME=auth-monitor

# Security - Auth Log Salt (REQUIRED for privacy-safe hashing)
# Generate a strong random string and keep it secret
# Example: openssl rand -hex 32
AUTH_LOG_SALT=change-this-to-a-long-random-secret-string

# IP Rate Limiting
# Maximum requests per IP in the time window
IP_RATE_WINDOW_MIN=15
IP_RATE_MAX_ATTEMPTS=20

# User+IP Correlation Limiter
# Maximum failures per (username, IP) pair in the time window
USER_IP_WINDOW_MIN=15
USER_IP_MAX_FAILURES=5

# IP Filtering (Optional)
# Comma-separated list of blocked IPs
IP_DENYLIST=

# Comma-separated list of allowed IPs (if set, only these IPs can access)
# Useful for admin-only endpoints
IP_ALLOWLIST=
